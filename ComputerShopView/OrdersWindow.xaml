<Window x:Class="ComputerShopView.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerShopView"
        mc:Ignorable="d"
         Title="Заказы" MinHeight="450" MinWidth="800" Loaded="OrdersWindow_Loaded">
    <Grid Background="Cyan">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="0" Name="DataGridView" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" ColumnWidth="*" />
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Button Margin="10" Padding="5" Click="ButtonAdd_Click">Добавить</Button>
           
            <Button Margin="10" Padding="5" Click="ButtonDel_Click">Удалить</Button>
            <Button Margin="10" Padding="5" Click="ButtonRef_Click">Обновить</Button>
        </StackPanel>
    </Grid>
</Window>